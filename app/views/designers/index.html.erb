<p id="notice"><%= notice %></p>

<h1>Designers</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Image Thumbnail</th>
      <th>Email</th>
      <th>Password</th>
      <th>Nickname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.id %></td>
        <td align="center">
          <% if designer.image.present? %>
            <img src= <%= designer.image.image.url %> width="100" height="100">
          <% else %>
            이미지 없음
          <% end %> 
        </td>
        <td><%= designer.email %></td>
        <td><%= designer.password %></td>
        <td><%= designer.nickname %></td>
        <td><%= link_to 'Show', designer %></td>
        <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
        <td><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

