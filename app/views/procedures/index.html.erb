<p id="notice"><%= notice %></p>

<h1>Procedures</h1>

<table>
  <thead>
    <tr>
      <th>Designer</th>
      <th>Hair length</th>
      <th>Hair category</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td><%= procedure.designer %></td>
        <td><%= procedure.hair_length_id %></td>
        <td><%= procedure.hair_category_id %></td>
        <td><%= procedure.title %></td>
        <td><%= procedure.subtitle %></td>
        <td><%= procedure.content %></td>
        <td><%= link_to 'Show', procedure %></td>
        <td><%= link_to 'Edit', edit_procedure_path(procedure) %></td>
        <td><%= link_to 'Destroy', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

